{
  "name": "@extremecodesoft/devextreme-utils",
  "version": "0.1.8",
  "description": "DevExtreme To Rest Helper Resources",
  "keywords": [
    "devextreme",
    "laravel-orion",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/extremecodesoft/devextreme-utils"
  },
  "bugs": {
    "url": "https://github.com/extremecodesoft/devextreme-utils/issues"
  },
  "author": "Diogo Biolo D'Agostini",
  "license": "ISC",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "rimraf -rf dist/ && tsc --project tsconfig.dist.json",
    "lint": "eslint \"src/**/*\" \"tests/**/*\"",
    "release": "release-it --only-version",
    "test": "cross-env NODE_ENV=testing jest --verbose --runInBand --detectOpenHandles",
    "test:ci": "cross-env NODE_ENV=testing jest --verbose --collect-coverage --runInBand"
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "lodash": "^4.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@faker-js/faker": "^7.6.0",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "cross-env": "^7.0.3",
    "cross-fetch": "^3.1.5",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "fake-indexeddb": "^4.0.1",
    "jest": "^29.5.0",
    "nock": "^13.3.1",
    "prettier": "^2.8.8",
    "release-it": "^15.10.1",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "release-it": {
    "git": {
      "commitMessage": "Release v${version}"
    },
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "parser": "@typescript-eslint/parser",
      "sourceType": "module"
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto",
          "singleQuote": true,
          "quoteProps": "preserve",
          "bracketSameLine": false,
          "printWidth": 100
        }
      ],
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "setupFiles": [
      "fake-indexeddb/auto"
    ]
  }
}
